#include <stdio.h>
#include <string.h>

int main() {
    char text[] = "GIDEONDEVANBU";
    int col = 3;
    int i;

    printf("Cipher Text: ");

    for(i = 0; i < col; i++) {
        int j = i;
        while(j < strlen(text)) {
            printf("%c", text[j]);
            j += col;
        }
    }

    return 0;
}


output
Cipher Text: GEDAUIOENDNVB
