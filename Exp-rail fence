#include <stdio.h>
#include <string.h>

int main() {
    char text[] = "GIDEONDEVANBU";
    int rail = 3;
    int len = strlen(text);
    int i, j;

    printf("Cipher Text: ");

    for(i = 0; i < rail; i++) {
        for(j = i; j < len; j += rail)
            printf("%c", text[j]);
    }

    return 0;
}

output
Cipher Text: GEDAUIOENDNVB
