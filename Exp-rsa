#include <stdio.h>

int main() {
    int p = 3, q = 7;
    int n, phi, e = 5, d = 5;
    int M = 4;      
    int C, M1;
    int i;

    n = p * q;               
    phi = (p - 1) * (q - 1);  

    C = 1;
    for(i = 0; i < e; i++)
        C = (C * M) % n;

    M1 = 1;
    for(i = 0; i < d; i++)
        M1 = (M1 * C) % n;

    printf("Message      : %d\n", M);
    printf("Encrypted    : %d\n", C);
    printf("Decrypted    : %d\n", M1);

    return 0;
}



output 
Message      : 4
Encrypted    : 16
Decrypted    : 4
